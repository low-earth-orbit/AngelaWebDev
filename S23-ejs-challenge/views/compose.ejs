<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" placeholder="Type title here." autocomplete="off" required>
    </div>
    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea class="form-control" type="text" name="postBody" id="postBody" placeholder="Type content here." autocomplete="off" rows="5" required></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </div>
</form>

<%- include("partials/footer"); -%>